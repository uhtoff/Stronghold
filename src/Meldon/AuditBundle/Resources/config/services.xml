<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="audit.update_subscriber" class="Meldon\AuditBundle\Subscriber\UpdateAuditSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
            <call method="setLogManager">
                <argument type="service" id="audit.log_manager" />
            </call>
        </service>
        <service id="audit.insert_subscriber" class="Meldon\AuditBundle\Subscriber\InsertAuditSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
            <call method="setLogManager">
                <argument type="service" id="audit.log_manager" />
            </call>
        </service>
        <service id="audit.audit_manager" class="Meldon\AuditBundle\Services\AuditManager">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>
        <service id="audit.log_item_repository" class="Meldon\AuditBundle\Repositories\LogItemRepository"
                 factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>MeldonAuditBundle:LogItemRepository</argument>
        </service>
        <service id="audit.log_manager" class="Meldon\AuditBundle\Services\LogManager">
            <!--<call method="setRepository">-->
                <!--<service id="audit.log_item_repository"/>-->
            <!--</call>-->
        </service>
    </services>
</container>
